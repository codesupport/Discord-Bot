{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "lib": ["es2020.string"]
  },
  "exclude": ["./test"]
}